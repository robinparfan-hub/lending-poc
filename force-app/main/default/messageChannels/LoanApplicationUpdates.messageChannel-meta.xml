<?xml version="1.0" encoding="UTF-8"?>
<LightningMessageChannel xmlns="http://soap.sforce.com/2006/04/metadata">
    <masterLabel>Loan Application Updates</masterLabel>
    <isExposed>true</isExposed>
    <description>Message channel for loan application component communication</description>
    <lightningMessageFields>
        <fieldName>applicationId</fieldName>
        <description>ID of the loan application</description>
    </lightningMessageFields>
    <lightningMessageFields>
        <fieldName>status</fieldName>
        <description>Current application status</description>
    </lightningMessageFields>
    <lightningMessageFields>
        <fieldName>eventType</fieldName>
        <description>Type of event (statusChange, save, submit, accept, decline)</description>
    </lightningMessageFields>
    <lightningMessageFields>
        <fieldName>data</fieldName>
        <description>Additional event data</description>
    </lightningMessageFields>
</LightningMessageChannel>