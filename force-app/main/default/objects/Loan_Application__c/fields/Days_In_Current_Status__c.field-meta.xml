<?xml version="1.0" encoding="UTF-8"?>
<CustomField xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Days_In_Current_Status__c</fullName>
    <description>Formula field that calculates how many days the application has been in its current status</description>
    <externalId>false</externalId>
    <formula>TODAY() - 
IF(
  ISBLANK(LastModifiedDate),
  DATEVALUE(CreatedDate),
  DATEVALUE(LastModifiedDate)
)</formula>
    <formulaTreatBlanksAs>BlankAsZero</formulaTreatBlanksAs>
    <inlineHelpText>Number of days since the application status was last changed</inlineHelpText>
    <label>Days in Current Status</label>
    <precision>18</precision>
    <required>false</required>
    <scale>0</scale>
    <trackFeedHistory>false</trackFeedHistory>
    <trackHistory>false</trackHistory>
    <type>Number</type>
    <unique>false</unique>
</CustomField>