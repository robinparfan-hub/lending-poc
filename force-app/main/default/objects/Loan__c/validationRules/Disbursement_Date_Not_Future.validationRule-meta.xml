<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Disbursement_Date_Not_Future</fullName>
    <active>true</active>
    <description>Ensures disbursement date cannot be in the future</description>
    <errorConditionFormula>Disbursement_Date__c &gt; TODAY()</errorConditionFormula>
    <errorDisplayField>Disbursement_Date__c</errorDisplayField>
    <errorMessage>Disbursement date cannot be in the future</errorMessage>
</ValidationRule>