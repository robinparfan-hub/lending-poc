<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Valid_Phone_Format</fullName>
    <active>true</active>
    <description>Ensures phone number has 10 digits</description>
    <errorConditionFormula>AND(
    NOT(ISBLANK(Phone__c)),
    LEN(SUBSTITUTE(SUBSTITUTE(SUBSTITUTE(SUBSTITUTE(SUBSTITUTE(Phone__c, "(", ""), ")", ""), "-", ""), " ", ""), ".", "")) != 10
)</errorConditionFormula>
    <errorDisplayField>Phone__c</errorDisplayField>
    <errorMessage>Phone number must contain exactly 10 digits</errorMessage>
</ValidationRule>