<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Decision_Date_Not_Future</fullName>
    <active>true</active>
    <description>Ensures decision date cannot be in the future</description>
    <errorConditionFormula>Decision_Date__c &gt; NOW()</errorConditionFormula>
    <errorDisplayField>Decision_Date__c</errorDisplayField>
    <errorMessage>Decision date cannot be in the future</errorMessage>
</ValidationRule>