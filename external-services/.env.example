# Environment Configuration for External Services
# Copy this file to .env and update with your values

# General Settings
NODE_ENV=development
LOG_LEVEL=info
MOCK_MODE=true

# API Authentication
API_KEY=test_key_development_2025

# Rate Limiting (requests per minute)
RATE_LIMIT=100

# Service-specific Ports (don't change unless needed)
CREDIT_BUREAU_PORT=3001
INCOME_VERIFICATION_PORT=3002
IDENTITY_VERIFICATION_PORT=3003
DOCUMENT_PROCESSING_PORT=3004
NOTIFICATION_PORT=3005

# Document Processing
MAX_FILE_SIZE=10485760  # 10MB in bytes

# Email Provider Settings (for production)
EMAIL_PROVIDER=mock  # Options: mock, sendgrid, ses
SENDGRID_API_KEY=your_sendgrid_api_key_here
AWS_SES_REGION=us-east-1
AWS_SES_ACCESS_KEY=your_aws_access_key_here
AWS_SES_SECRET_KEY=your_aws_secret_key_here

# SMS Provider Settings (for production)
SMS_PROVIDER=mock  # Options: mock, twilio, sns
TWILIO_ACCOUNT_SID=your_twilio_account_sid_here
TWILIO_AUTH_TOKEN=your_twilio_auth_token_here
TWILIO_PHONE_NUMBER=+1234567890
AWS_SNS_REGION=us-east-1

# External API Keys (for production when MOCK_MODE=false)
EQUIFAX_API_KEY=your_equifax_api_key_here
EQUIFAX_API_SECRET=your_equifax_api_secret_here
EXPERIAN_API_KEY=your_experian_api_key_here
TRANSUNION_API_KEY=your_transunion_api_key_here
PLAID_CLIENT_ID=your_plaid_client_id_here
PLAID_SECRET=your_plaid_secret_here
PLAID_ENVIRONMENT=sandbox  # Options: sandbox, development, production

# Database Settings (optional, for persistent storage)
USE_DATABASE=false
DATABASE_TYPE=postgres  # Options: postgres, mysql, mongodb
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=lending_poc
DATABASE_USER=lending_user
DATABASE_PASSWORD=secure_password_here

# Redis Settings (optional, for caching and rate limiting)
USE_REDIS=false
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Monitoring and Analytics (optional)
USE_METRICS=false
METRICS_PORT=9090
DATADOG_API_KEY=your_datadog_api_key_here
NEW_RELIC_LICENSE_KEY=your_new_relic_key_here

# CORS Settings
CORS_ORIGIN=*  # Set to specific origins in production
CORS_CREDENTIALS=true

# SSL Settings (for production)
USE_SSL=false
SSL_CERT_PATH=/path/to/cert.pem
SSL_KEY_PATH=/path/to/key.pem

# Webhook Settings
WEBHOOK_SECRET=your_webhook_secret_here
WEBHOOK_TIMEOUT=5000  # milliseconds

# Debug Settings
DEBUG=false
VERBOSE_LOGGING=false
REQUEST_LOGGING=true
RESPONSE_LOGGING=false

# Performance Settings
MAX_CONCURRENT_REQUESTS=100
REQUEST_TIMEOUT=30000  # milliseconds
KEEP_ALIVE_TIMEOUT=65000  # milliseconds

# Security Settings
ENABLE_RATE_LIMIT=true
ENABLE_HELMET=true
ENABLE_COMPRESSION=true
BCRYPT_ROUNDS=10

# Salesforce Integration (for callbacks)
SALESFORCE_INSTANCE_URL=https://your-instance.salesforce.com
SALESFORCE_CLIENT_ID=your_connected_app_client_id
SALESFORCE_CLIENT_SECRET=your_connected_app_client_secret
SALESFORCE_USERNAME=integration_user@example.com
SALESFORCE_PASSWORD=password_and_security_token